<div class="invoice-v1-header">
  <div class="row">
    <div class="col-lg-3">
      <p>Numer</p>
      <p><strong>12/32/2017</strong></p>
    </div>

    <div class="col-lg-3">
      <p>Data utworzenia</p>
      <p><strong><%= I18n.l @contract.created_at, format: :polish %></strong></p>
    </div>

    <div class="col-lg-3">
      <p>Ważność</p>
      <p><strong>10 minut</strong></p>
    </div>

    <div class="col-lg-3">
      <p>Status</p>
      <p><strong><%= @contract.status %></strong></p>
    </div>
  </div>
</div>
<hr>

<div class="responsive-table">
  <%= render 'contracts/elements/owner' %>

  <%= render 'contracts/elements/details' %>

  <%= render 'contracts/elements/payment_data' %>

  <%= render 'contracts/elements/items' %>
</div>


  Contract between <%= @contract.owner_id %> and<br>
  ORDER:<br>
  <%= @contract.order.id %> <br>

  <br><h2>Ludzie:</h2><br>

  <% if @contract.transactions.empty? %>
   <%= link_to 'Alexa dzielę rachunek! (utwórz liste transakcji / przyjaciol)', transactions_path, method: :post %>
  <% else %>
    <div class='x-transaction-containers'>

    <% @contract.transactions.each do |item| %>
      <div class="x-transaction">
        <%= item.user.name %> <%= item.name %> <%= item.amount %> PLN<br>
      </div>
    <% end -%>
    </div>
  <% end %>

