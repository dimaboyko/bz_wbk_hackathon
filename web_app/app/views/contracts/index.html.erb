<h1>List of contracts</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>

  <% if @contracts.empty? %>
     <tr><td><%= link_to 'Alexa płacę! (utwórz nowy kontrakt)', contracts_path, method: :post %><td></tr>
  <% else %>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= link_to "Przejdz do kontraktu #{contract.id}", contract %></td>
      </tr>
    <% end -%>
  <% end %>
</table>


